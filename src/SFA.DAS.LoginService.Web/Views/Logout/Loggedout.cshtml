@model SFA.DAS.LoginService.Application.BuildLogoutViewModel.LogoutResponse

@{
    ViewBag.Title = "Signed out";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">Signed out</h1>
            
            @if (Model.PostLogoutRedirectUri != null)
            {
                <p class="govuk-body">
                    <a class="PostLogoutRedirectUri govuk-link" href="@Model.PostLogoutRedirectUri">Return to <span>@Model.ClientName</span></a>
                </p>
            }
            
            @if (Model.SignOutIframeUrl != null)
            {
                <iframe width="0" height="0" src="@Model.SignOutIframeUrl"></iframe>
            }
        </div>
    </div>
</main>
