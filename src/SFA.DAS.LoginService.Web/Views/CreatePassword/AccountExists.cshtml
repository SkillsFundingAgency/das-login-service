@model SFA.DAS.LoginService.Web.Controllers.InvitationsWeb.ViewModels.AccountExistsViewModel

@{
    ViewBag.Title = "Account exists";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">Account exists</h1>

            <p class="govuk-body">You already have an account to use @Model.ServiceName</p>
            <p class="govuk-body">Please <a class="govuk-link" href="@Model.LoginLink">sign in</a></p>
        </div>
    </div>
</main>

