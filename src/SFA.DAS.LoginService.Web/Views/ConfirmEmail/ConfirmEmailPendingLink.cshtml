@model SFA.DAS.LoginService.Web.Controllers.ConfirmEmail.ViewModels.ConfirmEmailLinkViewModel

@{
    ViewBag.Title = "Request email confirmation";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Pending link</h1>

            <p class="govuk-body">
                We have previously sent an email to @Model.Email with instructions to confirm your account.
            </p>
            <p class="govuk-body">
                If you can't find the email in your inbox, check your junk email folder.
            </p>

            <p class="govuk-body">
                <a class="govuk-link" asp-action="Get" asp-controller="RequestConfirmEmail" asp-route-returnUrl="@Model.ReturnUrl" asp-route-email="@Model.Email">Request a new confirm email link</a>
            </p>
        </div>
    </div>
</main>