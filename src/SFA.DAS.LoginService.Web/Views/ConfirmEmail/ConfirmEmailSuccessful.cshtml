@model SFA.DAS.LoginService.Web.Controllers.ConfirmEmail.ViewModels.ConfirmEmailSuccessfulViewModel

@{
    ViewBag.Title = "Email confirmation successful";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Password reset successful</h1>
            <p class="govuk-body">
                Return to <a class="PostLogoutRedirectUri govuk-link" href="@Model.ReturnUrl">@Model.ServiceName</a>
            </p>
        </div>
    </div>
</main>